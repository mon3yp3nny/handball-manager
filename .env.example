# ============================================================
# Handball Manager - Environment Variables
# Copy this file to .env and fill in the values.
# ============================================================

# --- Database (required) ---
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=handball_manager
DATABASE_URL=postgresql://postgres:postgres@db:5432/handball_manager

# --- Security (required - CHANGE IN PRODUCTION) ---
SECRET_KEY=change-me-to-a-random-secret
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# --- CORS (comma-separated origins) ---
CORS_ORIGINS=http://localhost,http://localhost:3000,http://localhost:5173

# --- Frontend URL (used for redirects, email links) ---
FRONTEND_URL=http://localhost:5173

# --- Redis (optional - for caching and WebSocket pub/sub) ---
REDIS_URL=

# --- OAuth (optional) ---
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
APPLE_CLIENT_ID=
